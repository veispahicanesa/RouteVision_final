<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="15.0" styleClass="management-container" stylesheets="@vozac-management.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unze.ptf.routevision_final.controller.AdminListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Upravljanje Administratorima" />

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="button-box">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAddAdmin" styleClass="btn-add" text="Dodaj Admina" />
                <Button mnemonicParsing="false" onAction="#handleDeleteAdmin" styleClass="btn-delete" text="Obriši" />
                <Button mnemonicParsing="false" onAction="#loadAdminData" styleClass="btn-refresh" text="Osvježi" />
            </children>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="imeCol" prefWidth="120.0" text="Ime" />
                <TableColumn fx:id="prezimeCol" prefWidth="120.0" text="Prezime" />
                <TableColumn fx:id="emailCol" prefWidth="200.0" text="Email" />
                <TableColumn fx:id="plataCol" prefWidth="120.0" text="Plata" />
                <TableColumn fx:id="datumZaposlenjaCol" prefWidth="120.0" text="Datum Zaposlenja" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>