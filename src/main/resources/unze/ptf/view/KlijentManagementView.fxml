<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="15.0" styleClass="management-container" stylesheets="@klijent-management.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unze.ptf.routevision_final.controller.KlijentManagmentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Upravljanje Klijentima" />

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="button-box">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAddKlijent" styleClass="btn-add" text="Dodaj Klijenta" />
                <Button mnemonicParsing="false" onAction="#handleEditKlijent" styleClass="btn-edit" text="Uredi" />
                <Button mnemonicParsing="false" onAction="#handleDeleteKlijent" styleClass="btn-delete" text="Obriši" />
                <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="btn-refresh" text="Osvježi" />
            </children>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="40.0" text="#" /> <TableColumn fx:id="nazivCol" prefWidth="180.0" text="Naziv Firme" />
                <TableColumn fx:id="kontaktCol" prefWidth="130.0" text="Kontakt Osoba" /> <TableColumn fx:id="tipCol" prefWidth="100.0" text="Tip" />
                <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="telefonCol" prefWidth="120.0" text="Telefon" />
                <TableColumn fx:id="prometCol" prefWidth="110.0" text="Promet (KM)" /> <TableColumn fx:id="mjestoCol" prefWidth="150.0" text="Lokacija" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>