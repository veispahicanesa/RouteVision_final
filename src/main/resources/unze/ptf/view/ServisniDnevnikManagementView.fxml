<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="15.0" style="-fx-background-color: #ffffff;" stylesheets="@servisni-dnevnik-management.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unze.ptf.routevision_final.controller.ServisniDnevnikController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Servisni Dnevnik" />

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#showAddServisDialog" styleClass="btn-add" text="Dodaj Servis" />
                <Button mnemonicParsing="false" onAction="#editSelectedServis" styleClass="btn-edit" text="Uredi" />
                <Button mnemonicParsing="false" onAction="#deleteSelectedServis" styleClass="btn-delete" text="Obriši" />
                <Button mnemonicParsing="false" onAction="#loadDnevnikData" styleClass="btn-refresh" text="Osvježi" />
            </children>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="40.0" text="#" />
                <TableColumn fx:id="kamionCol" prefWidth="80.0" text="Kamion ID" />
                <TableColumn fx:id="vozacCol" prefWidth="80.0" text="Vozač ID" />
                <TableColumn fx:id="datumCol" prefWidth="100.0" text="Datum" />
                <TableColumn fx:id="vrstaCol" prefWidth="120.0" text="Vrsta Servisa" />
                <TableColumn fx:id="kmCol" prefWidth="90.0" text="KM" />
                <TableColumn fx:id="trosciCol" prefWidth="100.0" text="Trošak" />
                <TableColumn fx:id="servisarCol" prefWidth="120.0" text="Serviser" />
                <TableColumn fx:id="korisnikCol" prefWidth="100.0" text="Zabilježio" />
            </columns>
        </TableView>
    </children>
</VBox>