<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="15.0" styleClass="management-container"
      stylesheets="@servisni-dnevnik-management.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="unze.ptf.routevision_final.controller.NarudzbaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Upravljanje Narudžbama" />

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleNovaNarudzba" styleClass="btn-add" text="Dodaj Narudžbu" />
                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleEditNarudzba" styleClass="btn-edit" text="Uredi" />
                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleObrisi" styleClass="btn-delete" text="Obriši" />
                <Button mnemonicParsing="false" onAction="#loadData" styleClass="btn-refresh" text="Osvježi" />
            </children>
        </HBox>

        <TableView fx:id="tableNarudzbe" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colBroj" prefWidth="100.0" text="Broj Narudžbe" />
                <TableColumn fx:id="colKlijent" prefWidth="150.0" text="Klijent" />
                <TableColumn fx:id="colRoba" prefWidth="120.0" text="Vrsta Robe" />
                <TableColumn fx:id="colKolicina" prefWidth="80.0" text="Količina" />
                <TableColumn fx:id="colRelacija" prefWidth="200.0" text="Relacija (Od -> Do)" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>