<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="15.0" styleClass="management-container" stylesheets="@kamion-management.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unze.ptf.routevision_final.controller.KamionManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Upravljanje Kamionima" />

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="button-box">
            <children>
                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAddKamion" styleClass="btn-add" text="Dodaj Kamion" />

                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleEditKamion" styleClass="btn-edit" text="Uredi" />

                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDeleteKamion" styleClass="btn-delete" text="Obriši" />

                <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="btn-refresh" text="Osvježi" />
            </children>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="registarskaCol" prefWidth="120.0" text="Reg. Tablica" />
                <TableColumn fx:id="markaCol" prefWidth="120.0" text="Marka" />
                <TableColumn fx:id="modelCol" prefWidth="120.0" text="Model" />
                <TableColumn fx:id="kapacitetCol" prefWidth="100.0" text="Kapacitet (t)" />
                <TableColumn fx:id="kmCol" prefWidth="100.0" text="KM" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>