<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="15.0" styleClass="management-container" stylesheets="@oprema-management.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unze.ptf.routevision_final.controller.OpremaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="title-label" text="Upravljanje Opremom" />

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="button-box">
            <children>
                <Button fx:id="btnAdd" onAction="#handleAddOprema" styleClass="btn-add" text="Dodaj Opremu" />
                <Button fx:id="btnEdit" onAction="#handleEditOprema" styleClass="btn-edit" text="Uredi" />
                <Button fx:id="btnDelete" onAction="#handleDeleteOprema" styleClass="btn-delete" text="Obriši" />
                <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="btn-refresh" text="Osvježi" />
            </children>
        </HBox>

        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nazivCol" prefWidth="150.0" text="Naziv" />
                <TableColumn fx:id="vrstaCol" prefWidth="120.0" text="Vrsta" />
                <TableColumn fx:id="kapacitetCol" prefWidth="100.0" text="Kapacitet" />
                <TableColumn fx:id="stanjeCol" prefWidth="120.0" text="Stanje" />
                <TableColumn fx:id="datumNabavkeCol" prefWidth="120.0" text="Datum Nabavke" />
                <TableColumn fx:id="zadnjaProvjeraCol" prefWidth="120.0" text="Zadnja Provjera" />
                <TableColumn fx:id="napomenaCol" prefWidth="180.0" text="Napomena" />

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>