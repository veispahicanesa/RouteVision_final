<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootLayout" prefHeight="700.0" prefWidth="1000.0" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unze.ptf.routevision_final.controller.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="header-bar" BorderPane.alignment="CENTER">
            <children>
                <Label text="HN Logistics" styleClass="brand-name-top">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="userLabel" text="Korisnik: Ime Prezime (Role)" textFill="WHITE" />
                        <Button fx:id="btnTheme" onAction="#toggleTheme" styleClass="theme-button" text="Promijeni temu" />
                        <Button onAction="#handleLogout" styleClass="logout-button" text="Odjava" />
                    </children>
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </HBox>
            </children>
        </HBox>
    </top>

    <left>
        <VBox fx:id="sideMenu" prefWidth="220.0" spacing="5.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="30.0" styleClass="content-pane" BorderPane.alignment="CENTER">
            <children>
                <Label text="Dobrodo코li u RouteVision" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="15" maxWidth="350" prefHeight="250"
                      style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-cursor: hand;"
                      onMouseClicked="#handleDownloadReport">
                    <children>
                        <Label text="游늯" style="-fx-font-size: 50px;" />
                        <Label text="Generi코i PDF Izvje코taj" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label text="Kliknite ovdje da preuzmete trenutne podatke o voznom parku u PDF formatu."
                               textAlignment="CENTER" wrapText="true" style="-fx-text-fill: #7f8c8d; -fx-padding: 0 20 0 20;" />
                        <Button fx:id="btnDownloadReport" onAction="#handleDownloadReport" styleClass="pdf-button" text="PREUZMI SADA" />
                    </children>
                    <Button text="Preuzmi Finansijski Izvje코taj" onAction="#handleDownloadFinancialReport"
                            styleClass="btn-primary" />
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>